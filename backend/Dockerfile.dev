# ===========================================
# EMS Backend Development Dockerfile
# ===========================================
# Development-optimized container with hot reload
# Includes development tools and debugging capabilities
# Author: EMS Development Team
# Version: 1.0.0
# ===========================================

FROM node:18-alpine

# Install development dependencies and security updates
RUN apk update && apk upgrade && \
    apk add --no-cache \
    python3 \
    make \
    g++ \
    unixodbc \
    unixodbc-dev \
    curl \
    dumb-init \
    tini \
    git \
    && rm -rf /var/cache/apk/*

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S ems -u 1001 -G nodejs

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install && \
    npm cache clean --force

# Copy source code
COPY . .

# Create necessary directories with proper permissions
RUN mkdir -p uploads/employees uploads/tickets logs temp && \
    chown -R ems:nodejs uploads logs temp && \
    chmod -R 755 uploads logs temp

# Set environment variables for development
ENV NODE_ENV=development \
    PORT=5000 \
    HOST=0.0.0.0 \
    TZ=UTC

# Switch to non-root user
USER ems

# Expose port
EXPOSE 5000

# Add labels for better container management
LABEL maintainer="EMS Development Team" \
      version="1.0.0" \
      description="EMS Backend Development Server" \
      org.opencontainers.image.title="EMS Backend Dev" \
      org.opencontainers.image.description="Employee Management System Backend Development Server" \
      org.opencontainers.image.version="1.0.0" \
      org.opencontainers.image.vendor="Wellness Extract" \
      org.opencontainers.image.licenses="MIT"

# ===========================================
# Development Health Check
# ===========================================
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:5000/api/v1/health || exit 1

# ===========================================
# Development Startup
# ===========================================
# Use tini as init system for proper signal handling
ENTRYPOINT ["tini", "--"]

# Start the application in development mode with hot reload
CMD ["npm", "run", "dev"]
