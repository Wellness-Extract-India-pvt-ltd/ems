# ===========================================
# EMS Backend Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# cp env.example .env

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# MySQL Database Configuration
# ===========================================
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

MYSQL_ROOT_PASSWORD=

# ===========================================
# JWT Configuration
# ===========================================
# Generate strong secrets for production
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=
JWT_REFRESH_EXPIRES_IN=

# ===========================================
# Microsoft Graph API (Azure AD)
# ===========================================
CLIENT_ID=
CLIENT_SECRET=
TENANT_ID=
REDIRECT_URI=

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
SENDGRID_API_KEY=
EMAIL_FROM=
EMAIL_FROM_NAME=

# ===========================================
# Redis Configuration (for BullMQ)
# ===========================================
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_PATH=
MAX_FILE_SIZE=
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt
MAX_FILES_PER_UPLOAD=5

# ===========================================
# CORS Configuration
# ===========================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_DIR=logs

# ===========================================
# Rate Limiting (aligned with config.js)
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ===========================================
# BioMetrics SQL Server Configuration
# ===========================================
BIOMETRICS_SERVER=
BIOMETRICS_DATABASE=
BIOMETRICS_PORT=
BIOMETRICS_ENCRYPT=
BIOMETRICS_TRUST_CERT=
BIOMETRICS_USER=
BIOMETRICS_PASSWORD=

# ===========================================
# OpenAI Configuration (AI Assistant)
# ===========================================
OPENAI_API_KEY=
OPENAI_ASSISTANT_ID=

# ===========================================
# Additional Security Configuration
# ===========================================
SESSION_SECRET=your_session_secret_here_change_in_production
BCRYPT_ROUNDS=12

# ===========================================
# Cache Configuration
# ===========================================
CACHE_TTL=3600
CACHE_PREFIX=ems:

# ===========================================
# API Configuration
# ===========================================
API_VERSION=v1
API_TIMEOUT=30000

# ===========================================
# Monitoring and Health Check
# ===========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# Docker Configuration (for containerized setup)
# ===========================================
# When running in Docker, use these values:
# DB_HOST=mysql
# REDIS_HOST=redis